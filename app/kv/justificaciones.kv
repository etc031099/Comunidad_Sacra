#:kivy 1.0

<JustificacionesScreen>:
    name: "justificaciones"

    FloatLayout:
        # Fondo con gradiente
        canvas.before:
            Color:
                rgba: 0.05, 0.15, 0.25, 1  # Azul oscuro base
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: 0.08, 0.30, 0.45, 0.8  # Gradiente azul medio
            Rectangle:
                pos: self.pos[0], self.pos[1] + self.size[1] * 0.7
                size: self.size[0], self.size[1] * 0.3

        MDBoxLayout:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(20)

            # Header
            MDCard:
                orientation: "horizontal"
                padding: dp(20)
                md_bg_color: 1, 1, 1, 0.1
                elevation: 0
                radius: dp(15)
                size_hint_y: None
                height: dp(80)

                MDIconButton:
                    icon: "arrow-left"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    on_release: app.root.current = "dashboard"
                    pos_hint: {"center_y": 0.5}

                MDIcon:
                    icon: "file-document-edit"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    font_size: "32sp"
                    size_hint_x: None
                    width: dp(50)
                    pos_hint: {"center_y": 0.5}

                MDLabel:
                    text: "Gestión de Justificaciones"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    font_style: "H4"
                    bold: True
                    pos_hint: {"center_y": 0.5}

            # Contenido principal
            ScrollView:
                MDBoxLayout:
                    orientation: "vertical"
                    spacing: dp(20)
                    size_hint_y: None
                    height: self.minimum_height
                    padding: dp(10)

                    # Selector de tipo de justificación
                    MDCard:
                        id: tipo_card
                        orientation: "vertical"
                        padding: dp(20)
                        md_bg_color: 1, 1, 1, 0.95
                        elevation: 3
                        radius: dp(10)
                        size_hint_y: None
                        height: dp(220)

                        MDLabel:
                            text: "Tipo de Justificación"
                            font_style: "H6"
                            theme_text_color: "Primary"
                            size_hint_y: None
                            height: dp(30)

                        Spinner:
                            id: tipo_spinner
                            text: "Seleccionar Tipo"
                            values: ["FAENA", "REUNION"]
                            size_hint_y: None
                            height: dp(40)
                            size_hint_x: None
                            width: dp(400)
                            background_color: 0.2, 0.6, 0.86, 1
                            color: 1, 1, 1, 1
                            pos_hint: {"center_x": 0.5}
                            on_text: root.on_tipo_changed(self, self.text)

                        Spinner:
                            id: evento_spinner
                            text: "Seleccionar Evento"
                            values: []
                            size_hint_y: None
                            height: dp(40)
                            size_hint_x: None
                            width: dp(400)
                            background_color: 0.2, 0.6, 0.86, 1
                            color: 1, 1, 1, 1
                            pos_hint: {"center_x": 0.5}
                            on_text: root.on_evento_changed(self, self.text)

                        # Spinner de fechas (se agregará dinámicamente para faenas)
                        Widget:
                            id: fecha_spinner_placeholder
                            size_hint_y: None
                            height: dp(40)

                    # Lista de justificaciones
                    MDCard:
                        orientation: "vertical"
                        padding: dp(20)
                        md_bg_color: 1, 1, 1, 0.95
                        elevation: 3
                        radius: dp(10)
                        size_hint_y: None
                        height: dp(350)

                        MDBoxLayout:
                            orientation: "horizontal"
                            size_hint_y: None
                            height: dp(40)
                            spacing: dp(10)

                            MDLabel:
                                text: "Lista de Justificaciones"
                                font_style: "H6"
                                theme_text_color: "Primary"

                            Widget:

                            MDIconButton:
                                icon: "refresh"
                                theme_text_color: "Primary"
                                on_release: root.load_justificaciones()
                                tooltip_text: "Actualizar lista"

                        Widget:
                            size_hint_y: None
                            height: dp(10)

                        # Lista scrolleable de justificaciones
                        ScrollView:
                            GridLayout:
                                id: justificaciones_layout
                                cols: 1
                                spacing: dp(10)
                                size_hint_y: None
                                height: self.minimum_height
                                padding: dp(10)

            # Footer con información
            MDCard:
                orientation: "horizontal"
                padding: dp(15)
                md_bg_color: 0, 0, 0, 0.2
                elevation: 0
                radius: dp(10)
                size_hint_y: None
                height: dp(100)

                MDIcon:
                    icon: "information"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 0.7
                    font_size: "18sp"
                    size_hint_x: None
                    width: dp(25)

                MDLabel:
                    text: "• Selecciona el tipo de justificación (Faena o Reunión)\n• Usa 'Agregar Justificación' para registrar una nueva\n• Puedes editar o eliminar justificaciones existentes\n• Las justificaciones requieren evidencia (imagen o documento)"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 0.8
                    font_style: "Caption"

<JustificacionItem>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 110
    padding: 10
    spacing: 20
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]
    canvas.after:
        Color:
            rgba: 0.85, 0.85, 0.85, 1
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.7
        spacing: 2
        Label:
            text: root.nombre_miembro
            size_hint_y: None
            height: 30
            color: 0.1,0.1,0.1,1
            font_size: '16sp'
            bold: True
            halign: 'left'
            valign: 'middle'
            text_size: self.size
        Label:
            text: root.nombre_evento
            size_hint_y: None
            height: 24
            color: 0.2,0.2,0.2,1
            font_size: '14sp'
            halign: 'left'
            valign: 'middle'
            text_size: self.size
        Label:
            text: root.fecha_justificacion
            size_hint_y: None
            height: 20
            color: 0.3,0.3,0.3,1
            font_size: '12sp'
            halign: 'left'
            valign: 'middle'
            text_size: self.size
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.3
        spacing: 8
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 38
            spacing: 5
            MDIconButton:
                icon: 'file-upload-outline'
                theme_text_color: 'Custom'
                text_color: 0.18, 0.36, 0.56, 1
                user_font_size: '22sp'
            MDRaisedButton:
                text: 'Regularizar Evidencia'
                md_bg_color: 0.18, 0.36, 0.56, 1
                text_color: 1, 1, 1, 1
                on_release: root.on_regularizar()
                size_hint_y: None
                height: 38
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 38
            spacing: 5
            MDIconButton:
                icon: 'eye-outline'
                theme_text_color: 'Custom'
                text_color: 0.55, 0.18, 0.18, 1
                user_font_size: '22sp'
            MDRaisedButton:
                text: 'Ver Justificación'
                md_bg_color: 0.55, 0.18, 0.18, 1
                text_color: 1, 1, 1, 1
                on_release: root.on_ver_justificacion()
                size_hint_y: None
                height: 38

<JustificacionDialog>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: 'Seleccionar Miembro'
        size_hint_y: None
        height: 30
        color: 0, 0, 0, 1

    Spinner:
        id: miembro_spinner
        size_hint_y: None
        height: 40
        background_color: 1, 1, 1, 1
        color: 0, 0, 0, 1

    Label:
        text: 'Seleccionar Evento'
        size_hint_y: None
        height: 30
        color: 0, 0, 0, 1

    Spinner:
        id: evento_spinner
        size_hint_y: None
        height: 40
        background_color: 1, 1, 1, 1
        color: 0, 0, 0, 1

    Label:
        text: 'Fecha'
        size_hint_y: None
        height: 30
        color: 0, 0, 0, 1

    TextInput:
        id: fecha_input
        size_hint_y: None
        height: 40
        multiline: False
        background_color: 1, 1, 1, 1
        foreground_color: 0, 0, 0, 1

    Label:
        text: 'Motivo'
        size_hint_y: None
        height: 30
        color: 0, 0, 0, 1

    TextInput:
        id: motivo_input
        size_hint_y: None
        height: 100
        multiline: True
        background_color: 1, 1, 1, 1
        foreground_color: 0, 0, 0, 1

    Label:
        text: 'Seleccionar Archivo de Evidencia'
        size_hint_y: None
        height: 30
        color: 0, 0, 0, 1

    FileChooserListView:
        id: file_chooser
        size_hint_y: None
        height: 200
        # path: '~'  # Eliminado para evitar error en Windows
        filters: ['*.jpg', '*.jpeg', '*.png', '*.pdf']

    BoxLayout:
        size_hint_y: None
        height: 50
        spacing: 10
        padding: 10

        Button:
            text: 'Guardar'
            background_color: 0.2, 0.6, 1, 1
            color: 1, 1, 1, 1
            on_press: root.save_justificacion()

        Button:
            text: 'Cancelar'
            background_color: 0.8, 0.2, 0.2, 1
            color: 1, 1, 1, 1
            on_press: root.dismiss() 
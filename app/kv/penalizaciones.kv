#:kivy 2.0.0
#:import MDTooltip kivymd.uix.tooltip.MDTooltip

<TooltipButton@MDIconButton+MDTooltip>

<PenalizacionesScreen>:
    name: "penalizaciones"

    FloatLayout:
        # Fondo con gradiente
        canvas.before:
            Color:
                rgba: 0.05, 0.15, 0.25, 1  # Azul oscuro base
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: 0.08, 0.30, 0.45, 0.8  # Gradiente azul medio
            Rectangle:
                pos: self.pos[0], self.pos[1] + self.size[1] * 0.7
                size: self.size[0], self.size[1] * 0.3

        MDBoxLayout:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(20)

            # Header
            MDCard:
                orientation: "horizontal"
                padding: dp(20)
                md_bg_color: 1, 1, 1, 0.1
                elevation: 0
                radius: dp(15)
                size_hint_y: None
                height: dp(80)

                TooltipButton:
                    icon: "arrow-left"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    on_release: root.go_back()
                    pos_hint: {"center_y": 0.5}
                    tooltip_text: "Volver al menú principal"

                MDIcon:
                    icon: "cash-multiple"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    font_size: "32sp"
                    size_hint_x: None
                    width: dp(50)
                    pos_hint: {"center_y": 0.5}

                MDLabel:
                    text: "Gestión de Multas por Reuniones"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    font_style: "H4"
                    bold: True
                    pos_hint: {"center_y": 0.5}

            # Contenido principal
            ScrollView:
                MDBoxLayout:
                    orientation: "vertical"
                    spacing: dp(20)
                    size_hint_y: None
                    height: self.minimum_height
                    padding: dp(10)

                    # Filtros
                    MDCard:
                        orientation: "vertical"
                        padding: dp(20)
                        md_bg_color: 1, 1, 1, 0.95
                        elevation: 3
                        radius: dp(10)
                        size_hint_y: None
                        height: dp(280)

                        MDLabel:
                            text: "Filtros"
                            font_style: "H6"
                            theme_text_color: "Primary"
                            size_hint_y: None
                            height: dp(30)

                        # Filtro de Estado
                        MDBoxLayout:
                            orientation: "horizontal"
                            spacing: dp(10)
                            size_hint_y: None
                            height: dp(40)

                            MDLabel:
                                text: "Estado:"
                                theme_text_color: "Primary"
                                size_hint_x: 0.3

                            MDDropDownItem:
                                id: estado_dropdown
                                text: "Estado"
                                on_release: root.show_estado_menu()
                                size_hint_x: 0.7

                        Widget:
                            size_hint_y: None
                            height: dp(10)

                        # Filtro de Fecha
                        MDBoxLayout:
                            orientation: "horizontal"
                            spacing: dp(10)
                            size_hint_y: None
                            height: dp(40)

                            MDLabel:
                                text: "Fecha Desde:"
                                theme_text_color: "Primary"
                                size_hint_x: 0.3

                            MDTextField:
                                id: fecha_desde
                                hint_text: "YYYY-MM-DD"
                                helper_text: "Selecciona desde el calendario"
                                helper_text_mode: "on_focus"
                                size_hint_x: 0.7
                                on_focus: if self.focus: app.root.get_screen('penalizaciones').on_fecha_desde_click()

                        MDBoxLayout:
                            orientation: "horizontal"
                            spacing: dp(10)
                            size_hint_y: None
                            height: dp(40)

                            MDLabel:
                                text: "Fecha Hasta:"
                                theme_text_color: "Primary"
                                size_hint_x: 0.3

                            MDTextField:
                                id: fecha_hasta
                                hint_text: "YYYY-MM-DD"
                                helper_text: "Selecciona desde el calendario"
                                helper_text_mode: "on_focus"
                                size_hint_x: 0.7
                                on_focus: if self.focus: app.root.get_screen('penalizaciones').on_fecha_hasta_click()

                        Widget:
                            size_hint_y: None
                            height: dp(10)

                        MDBoxLayout:
                            orientation: "horizontal"
                            spacing: dp(10)
                            size_hint_y: None
                            height: dp(40)

                            MDRaisedButton:
                                text: "Limpiar Filtros"
                                md_bg_color: 0.8, 0.2, 0.2, 1
                                text_color: 1, 1, 1, 1
                                on_release: root.limpiar_filtros()
                                size_hint_x: 0.33

                            MDRaisedButton:
                                text: "Aplicar Fecha"
                                md_bg_color: 0.2, 0.6, 0.8, 1
                                text_color: 1, 1, 1, 1
                                on_release: root.aplicar_filtro_fecha()
                                size_hint_x: 0.33

                            MDRaisedButton:
                                text: "Ver Filtros"
                                md_bg_color: 0.2, 0.8, 0.2, 1
                                text_color: 1, 1, 1, 1
                                on_release: root.mostrar_estado_filtros()
                                size_hint_x: 0.33

                    # Lista de penalizaciones por miembro
                    MDCard:
                        orientation: "vertical"
                        padding: dp(20)
                        md_bg_color: 1, 1, 1, 0.95
                        elevation: 3
                        radius: dp(10)
                        size_hint_y: None
                        height: dp(400)

                        MDBoxLayout:
                            orientation: "horizontal"
                            size_hint_y: None
                            height: dp(40)
                            spacing: dp(10)

                            MDLabel:
                                text: "Penalizaciones por Miembro"
                                font_style: "H6"
                                theme_text_color: "Primary"

                            Widget:

                            TooltipButton:
                                icon: "refresh"
                                theme_text_color: "Primary"
                                on_release: root.cargar_penalizaciones_por_miembro()
                                tooltip_text: "Actualizar lista"

                            TooltipButton:
                                icon: "export"
                                theme_text_color: "Primary"
                                on_release: root.exportar_resultados()
                                tooltip_text: "Exportar resultados"

                            TooltipButton:
                                icon: "chart-line"
                                theme_text_color: "Primary"
                                on_release: root.mostrar_estadisticas()
                                tooltip_text: "Ver estadísticas"

                        Widget:
                            size_hint_y: None
                            height: dp(10)

                        ScrollView:
                            MDList:
                                id: penalizaciones_list
                                spacing: dp(10)
                                padding: dp(10)

            # Footer con información
            MDCard:
                orientation: "horizontal"
                padding: dp(15)
                md_bg_color: 0, 0, 0, 0.2
                elevation: 0
                radius: dp(10)
                size_hint_y: None
                height: dp(100)

                MDIcon:
                    icon: "information"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 0.7
                    font_size: "18sp"
                    size_hint_x: None
                    width: dp(25)

                MDLabel:
                    text: "• Las multas por reuniones se muestran agrupadas por miembro\n• El total acumulado se muestra junto al nombre del miembro\n• Expande cada panel para ver las multas individuales\n• Las multas por ausencia en reuniones se generan automáticamente\n• El contador de asistencias a faenas se mantiene para referencia"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 0.8
                    font_style: "Caption"

<PenalizacionItem>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 110
    padding: 10
    spacing: 20
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]
    canvas.after:
        Color:
            rgba: 0.85, 0.85, 0.85, 1
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

    MDBoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.7
        spacing: 2

        MDLabel:
            text: root.nombre_evento
            theme_text_color: "Custom"
            text_color: 0.1, 0.1, 0.1, 1
            font_style: "Subtitle1"
            size_hint_y: None
            height: 30

        MDLabel:
            text: root.tipo_penalizacion
            theme_text_color: "Custom"
            text_color: 0.2, 0.2, 0.2, 1
            font_style: "Subtitle2"
            size_hint_y: None
            height: 24

        MDLabel:
            text: f"Valor: {root.valor} | Realizado: {root.valor_realizado} | Pendiente: {root.valor_pendiente}"
            theme_text_color: "Custom"
            text_color: 0.3, 0.3, 0.3, 1
            font_style: "Caption"
            size_hint_y: None
            height: 20

        MDLabel:
            text: f"Fecha: {root.fecha_aplicacion} | Vence: {root.fecha_vencimiento}"
            theme_text_color: "Custom"
            text_color: 0.3, 0.3, 0.3, 1
            font_style: "Caption"
            size_hint_y: None
            height: 20

    MDBoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.3
        spacing: 8

        MDRaisedButton:
            text: 'Registrar Pago'
            md_bg_color: 0.18, 0.36, 0.56, 1
            text_color: 1, 1, 1, 1
            on_release: root.on_registrar_pago()
            size_hint_y: None
            height: 38

        MDRaisedButton:
            text: 'Registrar Horas'
            md_bg_color: 0.55, 0.18, 0.18, 1
            text_color: 1, 1, 1, 1
            on_release: root.on_registrar_horas()
            size_hint_y: None
            height: 38

<NuevaPenalizacionContent@MDBoxLayout>:
    orientation: 'vertical'
    spacing: "10dp"
    padding: "20dp"
    size_hint_y: None
    height: "400dp"

    MDTextField:
        id: id_miembro
        hint_text: "ID del Miembro"
        helper_text: "Ingrese el ID del miembro"
        helper_text_mode: "on_error"

    MDDropDownItem:
        id: tipo_evento_dropdown
        text: "Tipo de Evento"
        on_release: root.show_tipo_evento_menu()

    MDDropDownItem:
        id: tipo_penalizacion_dropdown
        text: "Tipo de Penalización"
        on_release: root.show_tipo_penalizacion_menu()

    MDTextField:
        id: valor
        hint_text: "Valor"
        helper_text: "Ingrese el valor de la penalización"
        helper_text_mode: "on_error"

    MDTextField:
        id: observaciones
        hint_text: "Observaciones"
        multiline: True

<RegistrarPagoContent@MDBoxLayout>:
    orientation: 'vertical'
    spacing: "10dp"
    padding: "20dp"
    size_hint_y: None
    height: "400dp"

    MDTextField:
        id: id_penalizacion
        hint_text: "ID de la Penalización"
        helper_text: "Ingrese el ID de la penalización"
        helper_text_mode: "on_error"

    MDTextField:
        id: monto_pagado
        hint_text: "Monto Pagado"
        helper_text: "Ingrese el monto pagado"
        helper_text_mode: "on_error"

    MDDropDownItem:
        id: metodo_pago_dropdown
        text: "Método de Pago"
        on_release: root.show_metodo_pago_menu()

    MDTextField:
        id: comprobante
        hint_text: "Comprobante"
        helper_text: "Ruta del comprobante"

<RegistrarHorasContent@MDBoxLayout>:
    orientation: 'vertical'
    spacing: "10dp"
    padding: "20dp"
    size_hint_y: None
    height: "400dp"

    MDTextField:
        id: id_penalizacion
        hint_text: "ID de la Penalización"
        helper_text: "Ingrese el ID de la penalización"
        helper_text_mode: "on_error"

    MDTextField:
        id: id_faena
        hint_text: "ID de la Faena"
        helper_text: "Ingrese el ID de la faena"
        helper_text_mode: "on_error"

    MDTextField:
        id: horas_realizadas
        hint_text: "Horas Realizadas"
        helper_text: "Ingrese las horas realizadas"
        helper_text_mode: "on_error"

    MDTextField:
        id: fecha_realizacion
        hint_text: "Fecha de Realización"
        helper_text: "Ingrese la fecha de realización"
        helper_text_mode: "on_error"

<NuevaPenalizacionDialog>:
    title: "Nueva Penalización"
    type: "custom"
    content_cls: NuevaPenalizacionContent

<RegistrarPagoDialog>:
    title: "Registrar Pago"
    type: "custom"
    content_cls: RegistrarPagoContent

<RegistrarHorasDialog>:
    title: "Registrar Horas de Reposición"
    type: "custom"
    content_cls: RegistrarHorasContent 